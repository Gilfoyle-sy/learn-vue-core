{
  "compilerOptions": {
    "outDir": "dist", // 指定输出目录
    "sourceMap": true, // 生成 source map 文件
    "target": "ES2016", // 目标语言版本
    "module": "ESNext", // 模块系统
    "moduleResolution": "node", // 模块解析策略
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 允许导入 JSON 文件
    "esModuleInterop": true, // 允许默认导入
    "jsx": "preserve", // 保留 JSX 语法
    "lib": ["ESNext", "DOM"], // 编译时所需的库
    "baseUrl": ".",
    "paths": {
      "@vuez/*": ["packages/*/src"]
    }
  }
}
